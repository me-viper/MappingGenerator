root = true

[*.cs]
indent_size = 4
indent_style = space
tab_width = 4

end_of_line = crlf
insert_final_newline = false

[*.csproj]
indent_size = 2
indent_style = space
tab_width = 2
end_of_line = crlf
insert_final_newline = false

[*.rst]
end_of_line = lf

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
insert_final_newline = true

[*.props]
indent_size = 2